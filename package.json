{
  "name": "haxan",
  "version": "1.0.0",
  "description": "Intuitive HTTP client for browsers and servers",
  "main": "dist/haxan.js",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts",
    "test": "ava test/**/*.spec.ts",
    "transpile": "tsc",
    "build:umd": "rollup build/index.js --file dist/haxan.js --format umd --name \"Haxan\"",
    "build": "npm run transpile && npm run build:umd && npm run minify",
    "minify": "uglifyjs dist/haxan.js --compress > dist/haxan.min.js",
    "postbuild": "rm -rf build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotvirus/typescript-eslint-ava-template.git"
  },
  "keywords": [],
  "author": "dotvirus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dotvirus/typescript-eslint-ava-template/issues"
  },
  "homepage": "https://github.com/dotvirus/typescript-eslint-ava-template#readme",
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.6.1",
    "ava": "^3.12.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "rollup": "^2.26.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "dependencies": {
    "uglify-js": "^3.10.4"
  }
}
